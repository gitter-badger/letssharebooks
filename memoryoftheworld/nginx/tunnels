server {
                server_name   "~^www(?<port>\d{4,5}).web.dokr" "~^www(?<port>\d{4,5}).memories.the-nsa.org";
                listen 80;

                location / {
                        resolver          127.0.0.1;
                        proxy_pass        http://sshd:$port;
                        proxy_set_header  X-Real-IP  $remote_addr;
                        proxy_set_header  Host $host;
                        #proxy_redirect http:// https://;
                }
}
